<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddCards"
    android:background="#454141">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Information"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#a6bfe0">
        </TextView>

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Type"
            android:textColor="#797b80"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="47dp" />

        <Spinner
            android:id="@+id/spiner2"
            android:layout_width="391dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="#bce2f5"
            android:drawSelectorOnTop="true" />


        <TextView
            android:id="@+id/title_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Title"
            android:textColor="#797b80"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="150dp" />

        <EditText
            android:id="@+id/title"
            android:layout_width="391dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="187dp" />

        <TextView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="CardHoldername"
            android:textColor="#797b80"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="266dp" />

        <EditText
            android:id="@+id/cardholdname"
            android:layout_width="391dp"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="311dp" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Number"
            android:textColor="#797b80"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="387dp" />
            <EditText
                android:id="@+id/number"
                android:layout_width="391dp"
                android:layout_height="40dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="424dp"
                tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Branch"
            android:textColor="#797b80"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="504dp" />

        <Spinner
            android:id="@+id/spiner1"
            android:layout_width="391dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:autofillHints="Select"
            android:layout_marginTop="20dp"
            android:background="#bce2f5"
            android:drawSelectorOnTop="true" />

        <TextView
            android:id="@+id/expm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Expiration Month"
            android:textColor="#797b80"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="619dp" />

        <Spinner
            android:id="@+id/spiner3"
            android:layout_width="391dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="#bce2f5"
            android:drawSelectorOnTop="true" />

        <TextView
            android:id="@+id/expy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Expiration Year"
            android:textColor="#797b80"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="748dp" />

        <Spinner
            android:id="@+id/spiner4"
            android:layout_width="391dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="#bce2f5"
            android:drawSelectorOnTop="true" />

        <TextView
            android:id="@+id/cvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="CVV"
            android:textColor="#797b80"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="881dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/togglepassword"
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            app:passwordToggleEnabled="true"
            tools:ignore="MissingConstraints">
            <EditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#454141"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:inputType="textEmailAddress">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</ScrollView>